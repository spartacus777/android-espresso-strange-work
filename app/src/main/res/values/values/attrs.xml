<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundCornersButton">
        <attr name="rcb_stroke_width" format="dimension" />
        <attr name="rcb_stroke_color" format="color" />
        <attr name="rcb_fill_color" format="color" />
        <attr name="rcb_fill_color_pressed" format="color" />
        <attr name="rcb_corner_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EmojiViewPagerIndicator">
        <attr name="indicator_color" format="color" />
    </declare-styleable>

    <declare-styleable name="HashTagAutoCompleteTextView">
        <attr name="completionThreshold" format="integer" />
        <attr name="dropDownSelector" format="reference" />
        <attr name="dropDownVerticalOffset" format="dimension" />
        <attr name="dropDownHorizontalOffset" format="dimension" />
        <attr name="dropDownAnchor" format="integer" />
        <attr name="dropDownWidth" format="dimension" />
        <attr name="dropDownHeight" format="dimension" />
        <attr name="completionHintView" format="reference" />
        <attr name="completionHint" format="string" />
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="progressIndeterminate" format="boolean" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="float" />
        <attr name="barSpinCycleTime" format="integer" />
        <attr name="circleRadius" format="dimension" />
        <attr name="fillRadius" format="boolean" />
        <attr name="barWidth" format="dimension" />
    </declare-styleable>

</resources>
